{
  "manifest_version": 3,
  "name": "LiveTrad",
  "version": "0.1.0",
  "description": "Real-time audio translation for online meetings",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.zoom.us/*",
    "*://*.teams.microsoft.com/*"
  ],
  "background": {
    "service_worker": "generated/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; media-src 'self' blob: mediastream:"
  },
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["generated/*", "assets/*", "offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.zoom.us/*",
        "*://*.teams.microsoft.com/*"
      ],
      "js": ["generated/content.js"],
      "css": [
        "assets/content.css",
        "assets/FloatingSwitch.css"
      ]
    }
  ]
}
