{
  "manifest_version": 3,
  "name": "LiveTrad",
  "version": "1.0.0",
  "description": "Real-time audio translation for online meetings",
  "permissions": [
    "tabCapture",
    "sidePanel",
    "storage",
    "tabs",
    "activeTab"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open LiveTrad"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
