{
  "manifest_version": 3,
  "name": "LiveTrad",
  "version": "1.0.0",
  "description": "Real-time audio translation for online meetings",
  "permissions": [
    "tabCapture",
    "sidePanel",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open Audio Capture Panel",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["webrtc-content.js"],
      "run_at": "document_end",
      "permissions": ["tabCapture"]
    }
  ],

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
