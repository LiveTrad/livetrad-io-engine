{
  "manifest_version": 2,
  "name": "LiveTrad",
  "version": "0.1.0",
  "description": "Real-time audio translation for online meetings",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>",
    "webRequest"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "livetrad@example.com",
      "strict_min_version": "57.0"
    }
  },
  "background": {
    "scripts": ["generated/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "LiveTrad"
  },
  "web_accessible_resources": [
    "generated/*",
    "assets/*",
    "offscreen.html"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["generated/content.js"],
      "run_at": "document_start"
    }
  ]
}
