{
  "appId": "com.livetrad.desktop",
  "productName": "LiveTrad Desktop",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "public/**/*",
    "node_modules/**/*",
    "binaries/**/*"
  ],
  "extraResources": [
    {
      "from": "binaries",
      "to": "binaries"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
